[core]
  excludesfile = ~/.config/git/ignore
  editor = vim
  pager = delta
  hooksPath = ~/.config/git/hooks
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true    # n/N で diff セクション間を移動
  plus-color = "#012800"
  minus-color = "#340001"
  line-numbers = true
  syntax-theme = "Monokai Extended"
[merge]
  conflictStyle = zdiff3
[i18n]
  commitencoding = utf-8
[color]
  ui = true
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
  default = simple
[color "diff"]
  old = 167 normal
  new = 030 normal
  context = 240
[alias]
  d  = diff
  dc = diff --cached
  st = status
  ch = checkout
  br = branch
  ad = add -A
  coa = commit -S --amend
  reco = rebase --continue
  cm = commit -S -m
  pm = push origin master
  pd = push origin develop
  po = push origin
  fe = fetch --prune
  hard = reset --hard
  soft = reset --soft
  remotes = remote -v
  unstage = reset --hard HEAD
  amend = commit --amend
  ignores = ls-files --full-name -i --exclude-standard
  nevermind = !git reset --hard HEAD && git clean -d -f
  delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
  today = !sh -c 'git log --reverse --no-merges --branches=* --date=local --since=midnight --oneline --author=\"`git config --get user.name`\"'
[push]
  default = matching
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[diff]
  compactionHeuristic = true
  algorithm = histogram
[gpg]
  format = ssh
[user]
  signingkey = ~/.ssh/id_ed25519.pub
[include]
  path = ~/.config/git/.gitconfig.local
[diff "sopsdiffer"]
  textconv = sops -d
[pull]
  rebase = false
